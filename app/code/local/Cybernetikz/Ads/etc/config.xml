    <frontend>
        <routers>
            <Cybernetikz_Ads>
                <use>standard</use>
                <args>
                    <module>Cybernetikz_Ads</module>
                    <frontName>ads</frontName>
                </args>
            </Cybernetikz_Ads>
        </routers>
		
		<layout>
			<updates>
				<ads>
					<file>ads.xml</file>
				</ads>
			</updates>
		</layout>
		
    </frontend>
</config>