    <frontend>
        <routers>
            <Cybernetikz_Sliders>
                <use>standard</use>
                <args>
                    <module>Cybernetikz_Sliders</module>
                    <frontName>sliders</frontName>
                </args>
            </Cybernetikz_Sliders>
        </routers>
		
		<layout>
			<updates>
				<sliders>
					<file>sliders.xml</file>
				</sliders>
			</updates>
		</layout>
		
    </frontend>
</config>